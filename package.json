{
  "scripts": {
    "clean": "shx rm -rf build",
    "start": "nollup -c --environment NODE_ENV:development",
    "build": "npm run clean && rollup -c --environment NODE_ENV:production"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "flex-box-grid": "^1.0.0",
    "milligram": "^1.4.1",
    "preact": "^10.5.13",
    "preact-feather": "^4.2.1",
    "uid": "^2.0.0",
    "unistore": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-react-jsx": "^7.14.3",
    "@prefresh/nollup": "^3.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "eslint": "^7.26.0",
    "eslint-config-preact": "^1.1.4",
    "nollup": "^0.16.4",
    "pwa-asset-generator": "^4.1.1",
    "react-refresh": "^0.10.0",
    "rollup": "^2.48.0",
    "rollup-plugin-commonjs-alternate": "^0.8.0",
    "rollup-plugin-hot-css": "^0.5.0",
    "rollup-plugin-static-files": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.1.1",
    "sass": "^1.32.13",
    "shx": "^0.3.3"
  }
}
