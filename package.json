{
  "private": true,
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --no-sw",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.23.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.5",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "sirv-cli": "1.0.11"
  },
  "dependencies": {
    "flex-box-grid": "^1.0.0",
    "hoofd": "^1.2.2",
    "milligram": "^1.4.1",
    "preact": "^10.5.13",
    "preact-feather": "^4.2.1",
    "preact-render-to-string": "^5.1.19",
    "snarkdown": "^2.0.0",
    "uid": "^2.0.0",
    "unistore": "^3.5.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
