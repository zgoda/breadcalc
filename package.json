{
  "scripts": {
    "start": "wmr",
    "build": "wmr build --prerender",
    "serve": "wmr serve"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "dependencies": {
    "flex-box-grid": "^1.0.0",
    "hoofd": "^1.1.0",
    "milligram": "^1.4.1",
    "preact": "^10.5.13",
    "preact-feather": "^4.2.1",
    "preact-iso": "^1.1.1",
    "unistore": "^3.5.2"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-preact": "^1.1.3",
    "sass": "^1.32.8",
    "wmr": "^1.5.1"
  }
}
